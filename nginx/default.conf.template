# File: default.conf.template
# Directory: /deepseek-coder-setup/nginx/
# This template uses environment variables that get substituted at runtime
# nginx 1.19+ will automatically process this and create /etc/nginx/conf.d/default.conf

# User and worker processes
user nginx;
worker_processes auto;
pid /var/run/nginx.pid;
error_log /var/log/nginx/error.log warn;

# Events configuration
events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # Log format
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
    access_log /var/log/nginx/access.log main;

    # Basic settings
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 120;
    types_hash_max_size 2048;
    client_max_body_size 10M;

    # Timeouts - configurable via environment
    proxy_connect_timeout ${NGINX_PROXY_TIMEOUT:-600}s;
    proxy_send_timeout ${NGINX_PROXY_TIMEOUT:-600}s;
    proxy_read_timeout ${NGINX_PROXY_TIMEOUT:-600}s;
    
    # For WebSocket connections
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;

    # GZIP Configuration
    gzip on;
    gzip_comp_level 6;
    gzip_min_length 256;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_proxied any;
    gzip_vary on;
    gzip_types
        text/plain
        text/css
        text/javascript
        text/xml
        application/javascript
        application/json
        application/xml
        application/x-javascript
        application/xhtml+xml
        application/rss+xml
        application/atom+xml
        font/opentype
        font/truetype
        font/ttf
        image/svg+xml;
    gzip_disable "MSIE [1-6]\.(?!.*SV1)";

    # Security Headers
    add_header X-Frame-Options SAMEORIGIN;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Referrer-Policy "strict-origin-when-cross-origin";
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:; connect-src 'self'";

    # Rate Limiting Zones - configurable via environment
    limit_req_zone $binary_remote_addr zone=general_limit:10m rate=${NGINX_RATE_LIMIT_GENERAL:-60}r/m;
    limit_req_zone $binary_remote_addr zone=login_limit:10m rate=${NGINX_RATE_LIMIT_LOGIN:-5}r/m;
    limit_req_zone $binary_remote_addr zone=api_limit:10m rate=${NGINX_RATE_LIMIT_API:-30}r/m;
    
    limit_req_status 429;

    # Cache configuration for CDN proxy
    proxy_cache_path /var/cache/nginx/cdn levels=1:2 keys_zone=cdn_cache:10m 
                     max_size=1g inactive=365d use_temp_path=off;

    # Server configuration
    server {
        listen 80;
        server_name _;
        
        # Root directory for static files
        root /usr/share/nginx/html;

        # CDN proxy for Bootstrap and other libraries
        location /cdn/ {
            proxy_pass https://cdn.jsdelivr.net/;
            proxy_ssl_server_name on;
            proxy_set_header Host cdn.jsdelivr.net;
            
            # Cache CDN resources for 30 days
            proxy_cache cdn_cache;
            proxy_cache_valid 200 30d;
            proxy_cache_key "$scheme$proxy_host$request_uri";
            proxy_ignore_headers Cache-Control;
            add_header X-Cache-Status $upstream_cache_status;
            add_header Cache-Control "public, immutable, max-age=2592000";
            
            # Gzip
            gzip on;
            gzip_types text/css application/javascript;
        }
        
        # API endpoints with separate rate limiting
        location /api/ {
            limit_req zone=api_limit burst=${NGINX_API_BURST:-10} nodelay;
            
            proxy_pass http://quart-app:8000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            proxy_connect_timeout 30s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
        }
        
        # Main application proxy
        location / {
            limit_req zone=general_limit burst=${NGINX_GENERAL_BURST:-20} nodelay;
            
            proxy_pass http://quart-app:8000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # WebSocket support
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            
            proxy_connect_timeout 60s;
            proxy_send_timeout ${NGINX_PROXY_TIMEOUT:-600}s;
            proxy_read_timeout ${NGINX_PROXY_TIMEOUT:-600}s;
        }
        
        # WebSocket endpoint with longer timeouts
        location /ws {
            proxy_pass http://quart-app:8000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            
            # WebSocket support
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            
            proxy_connect_timeout 60s;
            proxy_send_timeout ${NGINX_PROXY_TIMEOUT:-600}s;
            proxy_read_timeout ${NGINX_PROXY_TIMEOUT:-600}s;
        }
        
        # Login endpoint with stricter rate limiting
        location /login {
            limit_req zone=login_limit burst=${NGINX_LOGIN_BURST:-3} nodelay;
            limit_req_status 429;
            
            proxy_pass http://quart-app:8000/login;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
        
        # Static files
        location /static/ {
            alias /usr/share/nginx/html/static/;
            expires 30d;
            add_header Cache-Control "public, max-age=2592000";
        }
        
        # Custom error pages
        error_page 403 /unauthorized.html;
        location = /unauthorized.html {
            root /usr/share/nginx/html;
            internal;
        }
        
        error_page 429 /rate_limited.html;
        location = /rate_limited.html {
            root /usr/share/nginx/html;
            internal;
        }
    }
}